	elseif SpaMode==2 ; SpaMode=0
	elseif SpaMode>=1 ; OnSpa.Window
	elseif "%(year)" !_in_ TOSTR (birthday_celebrated_chief) && "%(month).%(day)"=="%(chief_birthday[1]).%(chief_birthday[2])"
