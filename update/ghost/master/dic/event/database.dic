OnCheifInfo.Photo.Change
{
	if reference0 == "char" 
	{
		chief_photo_choise=(0,0,0)
		chief_photo_choise[reference1]=1
		chief_photo=reference1
	}
	--
	"\p[2]%cp(0)\![bind,%(reference0),%(reference1),1]"
	--
	CheifInfo.Photo
}


