Compare.Round.Scoring
{
	_winner=poker_result[0]
	if poker_result[1]==5
	{	case poker_result[0]
		{	when "01" ; { poker_score[0]+=5 ; poker_score[1]+=5 }
			when "12" ; { poker_score[1]+=5 ; poker_score[2]+=5 }
			when "02" ; { poker_score[0]+=5 ; poker_score[2]+=5 }
		}
	}
	else ; poker_score[_winner]+=poker_result[1]
	--
	round++
}



